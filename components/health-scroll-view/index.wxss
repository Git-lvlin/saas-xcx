  .pop-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .pop-content .tab_wrap {
    flex: 1 !important;
    overflow: auto;
  }
  
  .pop_tab_content {
    border-top: 1rpx solid #F2F4F5;
    margin-top: 20rpx;
  }
  
  .pop_tab_title {
    padding: 20rpx;
  }
  
  .title_wrap_box {
    padding: 40rpx;
    border-bottom: 1rpx solid #F2F4F5;
    margin-bottom: 20rpx;
  }
  
  .van-radio-group {
    display: flex;
    flex-wrap: wrap;
  }
  
  .radio {
    background: #F2F6FE;
    border-radius: 20rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .radio .sub {
    font-size: 28rpx;
  }
  
  .radio_active {
    background: #408CFF;
    color: #fff;
  }
  
  .footer {
    display: flex;
    justify-content: space-between;
    border-top: 1rpx solid #F2F4F5;
    align-items: center;
    padding: 20rpx;
  }
  
  .price {
    font-size: 44rpx;
    color: #FF0000;
  }
  
  .footer .btn_wrap {
    width: 300rpx;
  }