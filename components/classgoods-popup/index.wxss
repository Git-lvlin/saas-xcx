
.second_class_popup {
  display: flex;
  flex-direction: column;
  width: 548rpx;
  border-radius: 24rpx 0rpx 0rpx 24rpx;
}

.second_class_box {
  flex: 1;
  width: 548rpx;
  background-color: #FFF;
  width: 548rpx;
  padding-bottom: 20rpx;
  border-radius: 24rpx 0rpx 0rpx 24rpx;
  overflow: auto;
}


.nav_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  background-color: #FFF;
  width: 548rpx;
  border-radius: 24rpx 0rpx 0rpx 0rpx;
}

.nav_title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  line-height: 50rpx;
  margin: 15rpx;
}

.nav_close {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin: 15rpx;
}


.second_class_list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 8rpx;
  margin-top: 50rpx;
}

.second_class_item {
  width: 176rpx;
  text-align: center;
  padding-top: 32rpx;
}

.class_icon {
  width: 128rpx;
  height: 128rpx;
  vertical-align: middle;
  margin-bottom: 16rpx;
}

.class_name {
  font-size: 24rpx;
  font-family: PingFangSC-Regular-Regular, PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  line-height: 28rpx;
}


.bottom_bar_height {
  width: 100%;
  height: 98rpx;
}