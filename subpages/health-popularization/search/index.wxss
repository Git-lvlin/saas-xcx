.search_history {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  background: linear-gradient(180deg, #fff 0%, #f5f5f5 100%);
}

.van-search__content{
  background-color: #FFFFFF !important;
}

.history_clear {
  display: flex;
  align-items: center;
  padding: 22rpx 24rpx 20rpx;
}

.van-search__action-button{
  color: #09BB07;
}

.title {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.clear {
  font-size: 24rpx;
  color: rgb(14, 72, 245);
  line-height: 36rpx;
}

.later {
  font-size: 24rpx;
  color: #767676;
  line-height: 36rpx;
}

.noSearch{
  padding: 0 0 40rpx 40rpx;
  color: #333333;
  font-size: 23rpx;
}

.option_list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 4rpx 0 24rpx;
}

.item {
  display: flex;
  align-items: center;
  height: 56rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
}

.hot_title {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 24rpx;
}

.title_wrap {
  display: flex;
  justify-content: space-around;
  padding: 15rpx 20rpx;
}

.title_wrap > image {
  width: 124rpx;
  height: 124rpx;
  margin-right: 20rpx;
}

.title_wrap > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.loading{ 
  padding: 10rpx; 
  text-align: center; 
  color: var(--tab-text-color,#646566);
 }
