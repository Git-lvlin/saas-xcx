.address-list {
  border-bottom: 1px solid #f6f6f9;
}

.address-list .list {
  padding: 15rpx;
}

.address-list .list .title {
  font-size: 30rpx;
  padding: 0 24rpx 0 6rpx;
  color: #666;
}

.address-list .list .cont {
  font-size: 30rpx;
  color: #333;
}

.address-list .list navigator {
  display: inline-block;
}

.address-list .list image {
  width: 28rpx;
  height: 28rpx;
}

.address-left {
  flex: 6;
}

.address-right {
  flex: 3.2;
}

.address-right .iconfont {
  color: #777;
  font-size: 30rpx;
}

.flow-fixed-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #f42424;
  z-index: 4999;
}

.flow-fixed-footer .chackout-left {
  font-size: 32rpx;
  line-height: 44px;
  color: #777;
}

.flow-fixed-footer .chackout-right {
  font-size: 34rpx;
}

.address-header {
  padding: 28rpx 0;
  border-bottom: 1px solid #f6f6f9;
  background-size: 120rpx auto;
  font-size: 1.7rem;
}

.flow-header-left {
  flex: 14;
  padding:0rpx 20rpx;
}

.flow-header-right {
  flex: 1;
}

.flow-header-right image {
  width: 34rpx;
  height: 34rpx;
  margin-top: 20rpx;
  float: right;
}

.address-header .flow-checkout-admin {
  font-size: 34rpx;
  color: #444;
}

.address-header .flow-checkout-admin text {
  padding: 0 10rpx;
}

.address-header .flow-checkout-address {
  font-size: 26rpx;
  color: #777;
  margin-top: 6rpx;
}

.radio-group raido {
  color: #f42424;
}

.address_container {
	background-color: #fff;
	border-radius: 24rpx;
	margin-top: 24rpx;
	padding: 48rpx 32rpx 0;
}

.address_container .address_top {
	font-size: 32rpx;
	font-weight: 700;
	color: #333333;
	font-family: OPPOSans-Bold, OPPOSans;
}

.address_container .address_top .address_name {
	margin-right: 16rpx;
}

.address_container .address_center {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	padding: 26rpx 0 32rpx;
	border-bottom: 2rpx solid #EEEEEE;
}

.address_container .address_center .address_title{
	font-size: 28rpx;
	font-family: OPPOSans-Medium, OPPOSans;
	font-weight: 500;
	color: #333333;
	width: 564rpx;
	line-height: 42rpx;
	display: -webkit-box;
	overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
	text-overflow: ellipsis; 
	max-height: 80rpx;
	word-break: break-all;
}

.address_center .address_title .address_tag {
	display: inline-block;
	width: 68rpx;
	height: 42rpx;
	background: #EBF3FF;
	border-radius: 8rpx;
	text-align: center;
	font-size: 24rpx;
	font-family: OPPOSans-Medium, OPPOSans;
	font-weight: 500;
	color: #408CFF;
	line-height: 42rpx;
	margin-right: 6rpx;
}

.address_container .address_center .address_edit {
	width:  40rpx;
	height: 40rpx;
}

.address_center .address_edit .img {
	width: 100%;
	height: 100%;
}

.address_container .address_bottom {
	padding: 18rpx 0;
	font-size: 28rpx;
	font-family: OPPOSans-Medium, OPPOSans;
	font-weight: 500;
	color: #666666;
}

.address_btn {
	position: absolute;
	bottom: 0;
	text-align: center;
	background-color: #fff;
	padding: 32rpx 70rpx;
	width: calc(100% - 140rpx);
}

.address_btn .add {
	width: 612rpx;
	height: 108rpx;
	background-color: #408CFF;
	border-radius: 24rpx;
	line-height: 108rpx;
	color: #fff;
	font-size: 40rpx;
	font-weight: 700;
}