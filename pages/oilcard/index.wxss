
page {
  background: #fff !important;
}

.btn-bind-oilcard {
  padding-top: 16rpx;
}
.btn-bind-oilcard-icon {
     width: 60rpx;
     height: 60rpx;
     line-height: 60rpx;
     overflow:hidden;
     margin-top: 8rpx;
     float: right;
     border: 1rpx solid #088;
     border-radius: 40rpx;
     background-color: #fff;
     color:green;
     font-size: 40rpx;
     opacity: 1;
}

.oilcard-item {
  background-color: #fff;
  padding-top: 10rpx;
  width: auto;
  height: 144rpx;
  line-height: 64rpx;
  overflow:hidden;
  margin: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
}

.oilcard-icon {
  width: 100rpx; height: 100rpx;
  float: left;
  margin: 16rpx;
  border-radius: 40rpx;
}

.btn-recharge {
  width: 180rpx; height: auto;
  line-height: 20px;
  text-align: center;
  box-sizing: border-box;
  border-radius: 12rpx;
  margin-top: -100rpx;
  margin-left: 370rpx;
  padding:10rpx;
  background: #1aad19;
  color: white;
}