<view class="container">
  <view class="padding-box btn-green btn-sm btn-bind-oilcard">
    <button class="f-32" catchtap="bindOilcardPage">
      添加本人其他油卡
      <view class="btn-bind-oilcard-icon">+</view>
    </button>
  </view>

  <scroll-view bindscrolltolower="bindDownLoad" scroll-y style="height: {{scrollHeight}}px; width: 750rpx;">
    <view class="oilcard-list" wx:if="{{ page.length }}">
      <view class="oilcard-item" wx:for="{{ page }}" wx:key="this">
        <view class="item-wrapper">
          <view class="coupon-type" bindtap="editOilcard" data-oilcard_id="{{item.oilcard_id}}"
            data-oilcard_type="{{item.oilcard_type.value}}" data-oilcard_number="{{item.oilcard_number}}"
            data-remark="{{item.remark}}" title="编辑油卡资料">
            <image class="oilcard-icon" src="../../images/zhongshihualogo.jpg" mode="scaleToFill"
              wx:if="{{ item.oilcard_type.value == '1' }}"></image>
            <image class="oilcard-icon" src="../../images/zhongshiyoulogo.jpg"
              wx:if="{{ item.oilcard_type.value == 2 }}"></image>
          </view>
          <view class="tip dis-flex flex-dir-column flex-x-center f-30">
            <text class="">{{ item.remark }}</text>
            <text class="oilcard-number col-7">{{ item.oilcard_number }}</text>
            <view class="btn-recharge" bindtap="oilcardRecharge" data-oilcard_id="{{item.oilcard_id}}"
              data-oilcard_type="{{item.oilcard_type.value}}" data-oilcard_number="{{item.oilcard_number}}"
              data-remark="{{item.remark}}">充 值</view>
          </view>
        </view>
      </view>
    </view>
  

  <view wx:elif="{{ notcont }}">
    <view class="jz-notcont">
      <text class="iconfont icon-wushuju"></text>
      <text class="cont">亲，暂无油卡哦</text>
    </view>
  </view>
</scroll-view>
</view>