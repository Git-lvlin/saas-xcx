<!--pages/storehouse/index.wxml-->
<view class="orderrecord__page">
	<view class="page__bd" style="height: 100%;">
		<view class="weui-navbar">
			<block wx:for="{{tabs}}" wx:key="*this">
				<view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}"
					bindtap="tabClick">
					<view class="weui-navbar__title">{{item}}</view>
				</view>
			</block>
		</view>
	</view>
	<view class="weui-form-preview">
		<view class="weui-form-preview__hd">
			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">订单金额</label>
				<em class="weui-form-preview__value">¥20000.00</em>
			</view>
		</view>
		<view class="weui-form-preview__bd">
			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">日期</label>
				<text class="weui-form-preview__value">2021-04-09 14:23:50</text>
			</view>
			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">品名</label>
				<text class="weui-form-preview__value">蔚芝蓝饮用纯净水</text>
			</view>
			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">数量</label>
				<text class="weui-form-preview__value">200桶</text>
			</view>

			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">店名</label>
				<text class="weui-form-preview__value">泉天下万江万峰水店</text>
			</view>

			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">电话</label>
				<text class="weui-form-preview__value">13000003333</text>
			</view>

			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">地址</label>
				<text class="weui-form-preview__value">东莞市万江区一条大街上</text>
			</view>

			<view class="weui-form-preview__item">
				<label class="weui-form-preview__label">状态</label>
				<text class="weui-form-preview__value">未发货</text>
			</view>
		</view>
		<view class="weui-form-preview__ft">
			<a class="weui-form-preview__btn weui-form-preview__btn_primary" wx:if="{{activeIndex == 0}}">发货</a>
		</view>
	</view>
</view>