<!--pages/user/cash-pledge/index.wxml-->
<view class="cash-pledge">
  <view class="cash-pledge__state" wx:if="{{pay_status === 10}}">未交押金</view>
  <view class="cash-pledge__state" wx:else>
    <text>￥{{pay_price}}</text>
    <text style="font-size: 28rpx; color: orange; padding-left: 20rpx;" wx:if="status === 3">退款中</text>
  </view>
  <view class="cash-pledge__button" wx:if="{{pay_status === 10}}">
    <button type="primary" class="weui-btn_warn" bindtap="topay">交押金</button>
  </view>
  <view class="cash-pledge__button" wx:else>
    <button type="primary" class="weui-btn_warn" bindtap="rebackPledge">退押金</button>
  </view>
  
</view>