/* 用户信息 */
.container {
  padding-bottom: 20rpx;
}
.user {
  position: relative;
  background: #fff;
  margin-bottom: 20rpx;
}

.user-header {
  width: 100%;
  height: 516rpx;
  background-repeat: no-repeat;
	background-size: 100% 100%;
}
.user-header .navigation-title {
	position: relative;
	color: #fff;
	font-size: 40rpx;
	line-height: 40rpx;
	padding-left: 36rpx;
	z-index: 999;
}

.user-header .user-header-cont {
  display: flex;
	padding-left: 32rpx;
	padding-top: 52rpx;
	z-index: 999;
	position: relative;
}

.user-header .user-header-cont .user-header-avatar {
  display: block;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  overflow: hidden;
}

.user-header .user-header-cont .user-header-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-header .user-header-cont .user-header-cont-name {
  font-size: 52rpx;
	padding: 20rpx 0;
	color: #fff;
}

/* 会员等级 */

.user-header-grade {
  background: #fff199;
  margin-top: 12rpx;
  height: 38rpx;
  line-height: 38rpx;
  border-radius: 10rpx;
  padding: 0 14rpx;
}


.user-header-grade .user-grade_icon image {
  display: block;
  width: 32rpx;
  height: 30rpx;
}

.user-header-grade .user-grade_name {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* 订单导航栏 */

.order-navbar {
  position: absolute;
	left: 22rpx;
  bottom: -136rpx;
  margin: 0 auto;
	width: 94%;
	height: 284rpx;
	border-radius: 24rpx;
  box-shadow: 0 1rpx 5rpx 0px rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  border-top: 1rpx solid #eee;
  background: #fff;
}

.order-navbar-header {
	margin-top: 46rpx;
	margin-bottom: 30rpx;
	margin-left: 48rpx;
	margin-right: 34rpx;
  width: 90%;
  height: 70rpx;
  justify-content: space-between;
  align-items: center;
}

.line {
	margin: auto;
	width: 626rpx;
	height: 1rpx;
	background-color: #E5E5E5;
}

.order-navbar-footer {
	margin: 0 auto;
	width: 100%;
	padding-top: 20rpx;
}

.order-navbar-footer .order-navbar-item .order-navbar__icon {
  text-align: center;
  margin: 0 auto;
  display: block;
  padding: 10rpx 0;
  color: #000;
  font-size: 36rpx;
}

.order-navbar-footer .order-navbar-item .order-navbar__name {
  display: block;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-right: 10rpx;
}

.order-navbar-footer .order-navbar-item .order-badge {
  position: absolute;
  top: 0;
  right: 55rpx;
  font-size: 22rpx;
  background: #ff495e;
  text-align: center;
  line-height: 28rpx;
  color: #fff;
  border-radius: 100%;
  min-height: 30rpx;
  min-width: 30rpx;
  padding: 1rpx;
}

/* 菜单列表 */

.menus-list {
  margin-top: 20rpx;
}

.menus-list .menus-item {
  position: relative;
  padding: 28rpx 28rpx;
  border-bottom: 1rpx solid #eee;
}

.menus-list .menus-item .menus-item__name {
  color: #444;
  margin-left: 20rpx;
}

/* 我的钱包 */

.my-asset {
  background: #fff;
  /* height: 70rpx; */
  padding: 26rpx 0;
}

.my-asset .asset-right {
  width: auto;
  border-left: 1rpx solid #eee;
  padding: 0 20rpx;
}

.asset-right_item {
  text-align: center;
  color: #666;
  float: left;
  padding: 0 20rpx;
}

.asset-right_item .item-icon text {
  font-size: 36rpx;
}

.asset-right_item .item-name {
  margin-top: 10rpx;
}

.asset-right_item .item-name text {
  font-size: 25rpx;
}

.asset-left_item {
  text-align: center;
  color: #666;
  padding: 0 20rpx;
}

.asset-left_item .item-value text {
  font-size: 32rpx;
  color: red;
}

.asset-left_item .item-name {
  margin-top: 6rpx;
}

.asset-left_item .item-name text {
  font-size: 25rpx;
}

.no-login-btn {
  padding: 40rpx 20rpx;
}

.no-login-btn button {
  height: 88rpx;
  line-height: 88rpx;
  background: #dfdfdf;
  color: #999;
  font-size: 30rpx;
  border-radius: 4px;
  border: 1px solid #ddd;
  text-align: center;
}

.store-selector {
  width: 100%;
  padding: 10px 30rpx;
  box-sizing: border-box;

}

.store-selector .weui-btn {
  width: 100%;
  background-color: white; 
  font-size: 28rpx;
  font-weight: normal;
  text-align: left;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  border-radius: 0;
}

.user__shop-name {
  width: 240px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}

.menu {
	border-radius: 24rpx;
	background-color: #fff;
	width: 94%;
	margin: 0 auto;
	margin-top: 160rpx;
}

.menu .menu_item {
	padding: 30rpx 0;
	margin-left: 20rpx;
	border-bottom: 1rpx solid #F2F4F5;
	display: flex;
	justify-content: space-between;
	align-items: center;
  background: transparent !important;
  line-height: 1;
}

.menu .menu_item .menu_item_left {
	display: flex;
	justify-content: center;
	align-items: center;
}

.menu .menu_item .menu_item_left_img {
	width: 48rpx;
	height: 48rpx;
	margin: 24rpx;
}

.menu_item .menu_item_left .menu_item_text {
	font-size: 36rpx;
	font-weight: 400;
	color: #112950;
}

.menu_item .menu_item_left_img image {
	width: 100%;
	height: 100%;
}

.menu .menu_item .menu_jiantou {
	font-size: 32rpx;
	margin-right: 30rpx;
	color: #B2BAC6;
}

.icon-daishouhuo {
  font-size: 48rpx !important;
}

.icon-daishouhuo + .order-navbar__name {
  margin-top: -10rpx;
}

.background_img {
	width: 100%;
	height: 100%;
	/* z-index: -1; */
	position: absolute;
	top: 0;
}

.background_img image {
	width: 100%;
	height: 100%;
}

.phone {
	font-size: 32rpx;
	font-family: OPPOSans-Medium, OPPOSans;
	font-weight: 500;
	color: #FFFFFF;
}
