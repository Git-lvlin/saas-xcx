/* pages/invite.wxss */
.content-bg{
  height: 500rpx;
  background-image: url('https://shop01-ningboyanxuan.oss-cn-shenzhen.aliyuncs.com/wechat/get_reward_for_inviting.png');
  background-repeat: no-repeat;
  background-position: center 20%;
  background-size: 70% 45%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.content-bg_text{
  text-align: center;
  margin-bottom: 160rpx;
  color: #fff;
  font-size: 24rpx;
}
.info{
  position: absolute;
  width: 700rpx;
  background: #FFFFFF;
  border-radius: 13rpx;
  z-index: 10;
  top: 400rpx;
  left: 25rpx;
}
.info_title{
  padding-top: 30rpx;
  text-align: center;
  font-size: 40rpx;
  color: #1A1A1A;
}
.info_icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin:50rpx auto 0;
  overflow: hidden;
}
.info_icon image{
  width: 100%;
  height: 100%;
}
.info_name{
  color: #1A1A1A;
  font-size: 30rpx;
  margin-top: 10rpx;
  text-align: center;
}
.info-btn{
  margin: 200rpx auto 0;
  width: 80%;
  height: 82rpx;
}
.info-btn .btn-normal{
  width: 100%;
  height: 82rpx;
  text-align: center;
  color: #fff;
  line-height: 82rpx;
  border-radius: 40rpx;
}
.info_trip{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #E84F4A;
  margin-top: 30rpx;
}
.info_trip_icon{
  height: 24rpx;
  width: 24rpx;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center center;
  margin-right: 10rpx;
}
.info_goto{
  width: 270rpx;
  margin:50rpx auto 30rpx;
  font-size: 28rpx;
  color: #5896F9;
}
