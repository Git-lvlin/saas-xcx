<view class="container">
  <view class="wechatapp">
    <view class="header">
      <open-data class="" type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class="auth-title">申请获取以下权限</view>
  <view class="auth-subtitle" style="white-space:pre-wrap">获得你微信绑定的手机号\n获得你的公开信息（昵称、头像等）</view>
  <view wx:if="{{mobile_acquired}}" class="no-login-btn">
    <button class="btn-normal" lang="zh_CN">授权微信绑定的手机号</button>
  </view>
  <view wx:else class="login-btn">
    <button class="btn-normal" lang="zh_CN" openType="getPhoneNumber" bindgetphonenumber="getPhoneNumber">授权微信绑定的手机号</button>
  </view>
  <view class="login-btn" style="margin-top:0.7em;">
    <button class="btn-normal" openType="getUserInfo" lang="zh_CN" bindgetuserinfo="getUserInfo">微信授权登录</button>
  </view>
  <view class="no-login-btn">
    <button class="btn-normal" catchtap="onNotLogin">暂不登录</button>
  </view>
</view>
