/* diy组件 */
@import "../../components/diy/index.wxss";

.placeholder {
  width: 100%;
  font-size: 14px;
  color: #999;
}

.container {
  background-color: white;
  overflow: hidden;
}

.weui-flex {
  margin-bottom: 20rpx;
  background-color: white;
}


.placeholder image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
}

.store__info {
  padding-left: 5px;
}

.store__info .placeholder {
  height: 20px;
  font-size: 14px;
}

.store__info {
  overflow: hidden;
  white-space: normal;
}

 .store__info .store__name {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 44rpx;
  color: #333;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
}

.store__list {
  margin-top: 20rpx;
}

.navigator {
  height: 80px;
  padding: 0 20px;
  text-align: center;
  border-left: 1px solid #eee;
}

.navigator .icon-daohang {
  font-size: 60rpx;
  line-height: 50px;
  color: rgb(77, 169, 255);
}

.navigator .placeholder {
  font-size: 24rpx;
  color: rgb(77, 169, 255);
}

.icon-daohang {
  font-size: 44rpx;
}

.weui-flex {
  padding: 0 10px;
}

.index__nail-map {
  background-color: white;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 20rpx;
  bottom: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 4px;
  z-index: 999;
}

.index__nail-map image{
  height: 100rpx;
  width: 100rpx;
}

.fake-input {
  height: 36px;
  width: 90%;
  border: 1px solid #eee;
  border-radius: 8rpx;
  background-color: #eee;
  margin: 10px auto;
  color: #999;
  line-height: 36px;
  
}

.fake-input navigator {
  padding: 0 10px;
  font-size: 28rpx;
}